<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchor_pane" prefHeight="550.0" prefWidth="550.0" stylesheets="LogIn.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane fx:id="exit_cover" layoutY="-1.0" prefHeight="31.0" prefWidth="559.0" />
        <HBox fx:id="h_box" alignment="CENTER" layoutY="28.0" prefHeight="100.0" prefWidth="559.0" spacing="5.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="63.0" prefWidth="164.0" text="Pharmacy" textAlignment="CENTER">
                    <font>
                        <Font name="Bell MT" size="38.0" />
                    </font>
                </Label>
                <ImageView fitHeight="83.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@pharmacy.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <Polygon fx:id="polygon" fill="DODGERBLUE" layoutX="49.5" layoutY="90.0" rotate="90.0" stroke="BLACK" strokeType="INSIDE">
            <points>
                <Double fx:value="-50.0" />
                <Double fx:value="40.0" />
                <Double fx:value="50.0" />
                <Double fx:value="40.0" />
                <Double fx:value="0.0" />
                <Double fx:value="-60.0" />
            </points>
        </Polygon>
        <HBox layoutX="38.0" layoutY="150.0" prefHeight="63.0" prefWidth="518.0">
            <children>
                <Label fx:id="lable_log_in" prefHeight="56.0" prefWidth="368.0" text="Forgot password">
                    <font>
                        <Font name="Bell MT Bold" size="46.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutY="220.0" prefHeight="316.0" prefWidth="559.0">
        <VBox fx:id="boarder" alignment="TOP_CENTER" prefHeight="320.0" prefWidth="266.0">
            <children>
               <ImageView fx:id="repassword" fitHeight="78.0" fitWidth="78.0" pickOnBounds="true" preserveRatio="true">
                  <VBox.margin>
                     <Insets top="15.0" />
                  </VBox.margin>
                  <image>
                     <Image url="@icons8-password-reset-80.png" />
                  </image></ImageView>
                 <Label fx:id="registered" alignment="CENTER" prefHeight="31.0" prefWidth="310.0" text="Please enter a new password">
                  <VBox.margin>
                     <Insets top="3.0" />
                  </VBox.margin>
               </Label>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="250.0">
                    <children>
                        <ImageView fx:id="user_img" fitHeight="30.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@padlock.png" />
                            </image>
                        </ImageView>
                        <TextField prefHeight="25.0" prefWidth="200.0" promptText="New password" />
                    </children>
                    <VBox.margin>
                        <Insets top="8.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="250.0">
                    <children>
                        <ImageView fx:id="padlock_img" fitHeight="30.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@padlock.png" />
                            </image>
                        </ImageView>
                        <PasswordField prefHeight="25.0" prefWidth="200.0" promptText="Re-enter Password" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
               <Button fx:id="change_password" mnemonicParsing="false" prefHeight="26.0" prefWidth="230.0" text="Change Password">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Button>
            </children>
        </VBox>
        </HBox>
    </children>
</AnchorPane>
