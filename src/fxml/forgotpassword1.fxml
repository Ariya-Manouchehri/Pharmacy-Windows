<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="550.0" prefWidth="900.0" stylesheets="@../css/LogIn.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane fx:id="anchor_pane" layoutX="450.0" prefHeight="550.0" prefWidth="450.0">
            <children>
                <HBox layoutY="40.0" prefHeight="63.0" prefWidth="450.0">
                    <children>
                        <Label fx:id="lable_log_in" prefHeight="62.0" prefWidth="396.0" text="Forgot password">
                            <font>
                                <Font name="Bell MT Bold" size="50.0" />
                            </font>
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <VBox fx:id="boarder" alignment="TOP_CENTER" layoutX="47.0" layoutY="160.0" prefHeight="286.0" prefWidth="348.0">
                    <children>
                        <ImageView fx:id="email_icon" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../res/icons8-email-64.png" />
                            </image>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </ImageView>
                        <Label fx:id="registered" alignment="CENTER" prefHeight="31.0" prefWidth="268.0" text="Please enter your registered email ID">
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </Label>
                        <TextField prefHeight="26.0" prefWidth="504.0" promptText="Please enter your registered email ID">
                            <VBox.margin>
                                <Insets top="15.0" />
                            </VBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <TilePane alignment="TOP_CENTER" layoutY="390.0" prefHeight="83.0" prefWidth="450.0">
                    <children>
                        <Button fx:id="cancel" mnemonicParsing="false" prefWidth="70.0" text="Cancel">
                            <TilePane.margin>
                                <Insets right="10.0" />
                            </TilePane.margin>
                        </Button>
                        <Button fx:id="next" mnemonicParsing="false" prefWidth="70.0" text="Next">
                            <TilePane.margin>
                                <Insets left="10.0" />
                            </TilePane.margin>
                        </Button>
                    </children>
                </TilePane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="leftcolor" prefHeight="550.0" prefWidth="450.0">
            <children>
                <ImageView fx:id="drug_icon" fitHeight="192.0" fitWidth="173.0" layoutX="139.0" layoutY="246.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../res/pills.png" />
                    </image>
                </ImageView>
                <HBox fx:id="pharmacy" alignment="CENTER" layoutX="15.0" layoutY="40.0" prefHeight="100.0" prefWidth="420.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="63.0" prefWidth="243.0" text="Pharmacy" textAlignment="CENTER">
                            <font>
                                <Font name="Berlin Sans FB" size="50.0" />
                            </font>
                        </Label>
                        <ImageView fitHeight="117.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../res/pharmacy.png" />
                            </image>
                            <HBox.margin>
                                <Insets right="25.0" />
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
