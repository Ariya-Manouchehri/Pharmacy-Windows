<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.jfoenix.controls.JFXTextField?>
<AnchorPane prefHeight="450.0" prefWidth="700.0" stylesheets="@../css/LogIn.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane fx:id="anchor_pane" layoutX="350.0" prefHeight="450.0" prefWidth="350.0">
            <children>
                <HBox layoutY="30.0" prefHeight="63.0" prefWidth="350.0">
                    <children>
                        <Label fx:id="lable_log_in" prefHeight="62.0" prefWidth="396.0" text="Forgot password">
                            <font>
                                <Font name="Bell MT Bold" size="38.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <VBox fx:id="boarder" alignment="TOP_CENTER" layoutX="47.0" layoutY="130.0" prefHeight="270.0" prefWidth="255.0">
                    <children>
                        <ImageView fx:id="email_icon" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../res/icon_password.png" />
                            </image>
                            <VBox.margin>
                                <Insets top="25.0" />
                            </VBox.margin>
                        </ImageView>
                        <JFXTextField labelFloat="true" prefHeight="25.0" prefWidth="180.0" promptText="Please enter your verification code">
                            <VBox.margin>
                                <Insets top="30.0" />
                            </VBox.margin></JFXTextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <TilePane alignment="TOP_CENTER" layoutY="332.0" prefHeight="50.0" prefWidth="350.0">
                    <children>
                        <Button fx:id="cancel" mnemonicParsing="false" prefWidth="70.0" text="Cancel">
                            <TilePane.margin>
                                <Insets right="10.0" />
                            </TilePane.margin>
                        </Button>
                        <Button fx:id="next" mnemonicParsing="false" prefWidth="70.0" text="Next">
                            <TilePane.margin>
                                <Insets left="10.0" />
                            </TilePane.margin>
                        </Button>
                    </children>
                </TilePane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="leftcolor" prefHeight="450.0" prefWidth="350.0">
            <children>
                <ImageView fx:id="drug_icon" fitHeight="162.0" fitWidth="169.0" layoutX="89.0" layoutY="210.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../res/pills.png" />
                    </image>
                </ImageView>
                <HBox fx:id="pharmacy" alignment="CENTER" layoutX="15.0" layoutY="40.0" prefHeight="100.0" prefWidth="320.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="63.0" prefWidth="243.0" text="Pharmacy" textAlignment="CENTER">
                            <font>
                                <Font name="Berlin Sans FB" size="44.0" />
                            </font>
                        </Label>
                        <ImageView fitHeight="100.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../res/pharmacy.png" />
                            </image>
                            <HBox.margin>
                                <Insets right="25.0" />
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
